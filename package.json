{
  "name": "pageantempress",
  "version": "2.1.0",
  "description": "Advanced Web Animation Showcase - Experience the pinnacle of web animation artistry with cutting-edge CSS effects, interactive elements, and performance optimization",
  "main": "index.js",
  "type": "module",
  "author": {
    "name": "George G. & Thanattsitt S.",
    "email": "info@pageantempress.com",
    "url": "https://pageantempress.com"
  },
  "license": "MIT",
  "homepage": "https://pageantempress.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/pageantempress/pageantempress.git"
  },
  "bugs": {
    "url": "https://github.com/pageantempress/pageantempress/issues"
  },
  "keywords": [
    "web-animation",
    "css-effects",
    "interactive-design",
    "performance-optimization",
    "pwa",
    "accessibility",
    "pageant",
    "crown-effects",
    "particle-system",
    "theme-switching",
    "glass-morphism",
    "holographic-effects",
    "modern-web-development"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "vite --host 0.0.0.0 --port 3000",
    "build": "npm run lint && npm run test && vite build",
    "build:prod": "npm run build && npm run optimize",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "serve": "http-server dist -p 8080 -c-1",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:css": "stylelint \"**/*.{css,scss}\" --fix",
    "lint:html": "htmlhint \"**/*.html\"",
    "format": "prettier --write .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:lighthouse": "lhci autorun",
    "test:accessibility": "axe-core \"http://localhost:3000\"",
    "analyze": "npm run analyze:bundle && npm run analyze:performance",
    "analyze:bundle": "vite-bundle-analyzer dist/stats.json",
    "analyze:performance": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "optimize": "npm run optimize:images && npm run optimize:css && npm run optimize:js",
    "optimize:images": "imagemin 'assets/images/**/*.{jpg,jpeg,png,gif,svg}' --out-dir=dist/assets/images --plugin=imagemin-mozjpeg --plugin=imagemin-pngquant --plugin=imagemin-gifsicle --plugin=imagemin-svgo",
    "optimize:css": "cssnano dist/assets/*.css --no-map",
    "optimize:js": "terser dist/assets/*.js --compress --mangle --output dist/assets/",
    "pwa:generate": "npm run pwa:icons && npm run pwa:manifest",
    "pwa:icons": "pwa-asset-generator assets/logo.svg dist/assets/icons --manifest dist/manifest.json",
    "pwa:manifest": "node scripts/generate-manifest.js",
    "deploy": "npm run build:prod && npm run deploy:vercel",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir dist",
    "deploy:github": "gh-pages -d dist",
    "security": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "clean": "rimraf dist coverage .nyc_output",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "http-server docs -p 8081",
    "precommit": "lint-staged",
    "postinstall": "husky install",
    "validate": "npm run lint && npm run test && npm run build",
    "ci": "npm ci && npm run validate && npm run test:e2e",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "swiper": "^11.0.5",
    "gsap": "^3.12.2",
    "three": "^0.159.0",
    "lottie-web": "^5.12.2",
    "intersection-observer": "^0.12.2",
    "web-animations-js": "^2.3.2",
    "particles.js": "^2.0.0",
    "hammer.js": "^2.0.8",
    "focus-visible": "^5.2.0",
    "workbox-sw": "^7.0.0",
    "workbox-strategies": "^7.0.0",
    "workbox-routing": "^7.0.0",
    "workbox-precaching": "^7.0.0",
    "workbox-cacheable-response": "^7.0.0",
    "workbox-expiration": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/three": "^0.159.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitejs/plugin-legacy": "^5.2.0",
    "@vitejs/plugin-pwa": "^0.17.4",
    "@vitest/coverage-v8": "^1.1.3",
    "@vitest/ui": "^1.1.3",
    "autoprefixer": "^10.4.16",
    "axe-core": "^4.8.3",
    "cssnano": "^6.0.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-accessibility": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-performance": "^2.0.1",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-security": "^1.7.1",
    "gh-pages": "^6.1.1",
    "htmlhint": "^1.1.4",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "jsdom": "^23.0.1",
    "jsdoc": "^4.0.2",
    "lighthouse": "^11.4.0",
    "lighthouse-ci": "^0.12.1",
    "lint-staged": "^15.2.0",
    "netlify-cli": "^17.15.0",
    "postcss": "^8.4.32",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.1.1",
    "pwa-asset-generator": "^6.3.1",
    "rimraf": "^5.0.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "semantic-release": "^22.0.12",
    "stylelint": "^16.1.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-prettier": "^9.0.5",
    "terser": "^5.26.0",
    "typescript": "^5.3.3",
    "vercel": "^32.8.0",
    "vite": "^5.0.10",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.1.3",
    "@playwright/test": "^1.40.1",
    "playwright": "^1.40.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{html,json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run validate",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "node": true,
      "serviceworker": true
    },
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:security/recommended",
      "plugin:performance/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "import",
      "jsx-a11y",
      "security",
      "performance",
      "accessibility"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "error",
      "no-var": "error",
      "accessibility/no-display-none": "error",
      "security/detect-object-injection": "error",
      "performance/no-global-event-listener": "warn"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "declaration-block-trailing-semicolon": "always",
      "block-no-empty": true,
      "color-no-invalid-hex": true,
      "declaration-colon-space-after": "always",
      "declaration-colon-space-before": "never",
      "function-comma-space-after": "always",
      "function-url-quotes": "always",
      "media-feature-colon-space-after": "always",
      "media-feature-colon-space-before": "never",
      "media-feature-name-no-vendor-prefix": true,
      "max-empty-lines": 2,
      "number-leading-zero": "always",
      "number-no-trailing-zeros": true,
      "property-no-vendor-prefix": true,
      "rule-empty-line-before": [
        "always",
        {
          "except": ["first-nested"],
          "ignore": ["after-comment"]
        }
      ],
      "selector-list-comma-newline-after": "always",
      "selector-no-id": true,
      "shorthand-property-no-redundant-values": true,
      "string-quotes": "single",
      "value-no-vendor-prefix": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "release": {
    "branches": ["main", "next"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "lighthouse-ci": {
    "ci": {
      "collect": {
        "url": ["http://localhost:3000"],
        "numberOfRuns": 3
      },
      "assert": {
        "assertions": {
          "categories:performance": ["warn", { "minScore": 0.9 }],
          "categories:accessibility": ["error", { "minScore": 0.95 }],
          "categories:best-practices": ["warn", { "minScore": 0.9 }],
          "categories:seo": ["warn", { "minScore": 0.9 }],
          "categories:pwa": ["warn", { "minScore": 0.8 }]
        }
      },
      "upload": {
        "target": "temporary-public-storage"
      }
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/pageantempress"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "volta": {
    "node": "18.19.0",
    "npm": "10.2.4"
  }
}
