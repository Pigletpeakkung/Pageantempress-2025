# ==========================================================================
# ENVIRONMENT VARIABLES - PageantEmpress 2025
# Copy this file to .env and update with your actual values
# ==========================================================================

# Application Configuration
APP_NAME="PageantEmpress 2025"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://pageantempress.com
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=pageant_empress_2025
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Redis Configuration (for caching)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_DATABASE=0

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@pageantempress.com
MAIL_FROM_NAME="${APP_NAME}"

# Alternative Email Services
MAILGUN_DOMAIN=your_mailgun_domain
MAILGUN_SECRET=your_mailgun_key
SENDGRID_API_KEY=your_sendgrid_key
POSTMARK_TOKEN=your_postmark_token

# Social Media API Keys
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret
YOUTUBE_API_KEY=your_youtube_api_key

# Google Services
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_MAPS_API_KEY=your_google_maps_key
GOOGLE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
GOOGLE_RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key
GOOGLE_SHEETS_API_KEY=your_google_sheets_key

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=pageant-empress-uploads
AWS_URL=https://s3.amazonaws.com

# Cloudinary Configuration (for image management)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# CDN Configuration
CDN_URL=https://cdn.pageantempress.com
CDN_ENABLED=true

# Security Settings
APP_KEY=base64:your_32_character_random_string
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key
CSRF_TOKEN_TIMEOUT=3600
PASSWORD_RESET_TIMEOUT=3600
SESSION_LIFETIME=120
SESSION_DRIVER=database
SESSION_ENCRYPT=true

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx,mp4,mov
UPLOAD_DRIVER=local
UPLOAD_PATH=uploads/
UPLOAD_URL=/uploads/

# Image Processing
IMAGE_QUALITY=85
IMAGE_MAX_WIDTH=2000
IMAGE_MAX_HEIGHT=2000
IMAGE_THUMBNAIL_WIDTH=300
IMAGE_THUMBNAIL_HEIGHT=300
IMAGE_WATERMARK_ENABLED=true
IMAGE_WATERMARK_PATH=assets/images/watermark.png

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=pageant_empress
CACHE_TTL=3600

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_FILES=storage/framework/sessions
SESSION_CONNECTION=default
SESSION_TABLE=sessions

# Queue Configuration
QUEUE_DRIVER=redis
QUEUE_CONNECTION=default
QUEUE_TABLE=jobs
QUEUE_FAILED_TABLE=failed_jobs

# Analytics and Tracking
FACEBOOK_PIXEL_ID=your_facebook_pixel_id
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
HOTJAR_ID=your_hotjar_id
MIXPANEL_TOKEN=your_mixpanel_token
INTERCOM_APP_ID=your_intercom_app_id

# Payment Gateway (for donations/merchandise)
STRIPE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# SMS/Push Notifications
TWILIO_SID=your_twilio_sid
TWILIO_TOKEN=your_twilio_token
TWILIO_FROM=your_twilio_phone_number
PUSHER_APP_ID=your_pusher_app_id
PUSHER_APP_KEY=your_pusher_app_key
PUSHER_APP_SECRET=your_pusher_app_secret
PUSHER_APP_CLUSTER=your_pusher_cluster

# Social Login
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# External Services
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
PEXELS_API_KEY=your_pexels_api_key
GIPHY_API_KEY=your_giphy_api_key

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn
BUGSNAG_API_KEY=your_bugsnag_api_key
NEW_RELIC_LICENSE_KEY=your_new_relic_key
ROLLBAR_TOKEN=your_rollbar_token

# Development Tools
LARAVEL_DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false
HORIZON_ENABLED=false

# Performance Monitoring
LIGHTHOUSE_CI_TOKEN=your_lighthouse_ci_token
PINGDOM_API_KEY=your_pingdom_api_key
UPTIME_ROBOT_API_KEY=your_uptime_robot_key

# Backup Configuration
BACKUP_DRIVER=s3
BACKUP_S3_BUCKET=pageant-empress-backups
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_MINUTES=1
RATE_LIMIT_VOTING=5

# Feature Flags
FEATURE_VOTING_ENABLED=true
FEATURE_GALLERY_ENABLED=true
FEATURE_CHAT_ENABLED=false
FEATURE_LIVE_STREAMING=false
FEATURE_MOBILE_APP=false

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're currently performing scheduled maintenance. Please check back soon!"
MAINTENANCE_ALLOWED_IPS=127.0.0.1,192.168.1.100

# API Configuration
API_PREFIX=api/v1
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=60
API_DOCUMENTATION_ENABLED=true

# Search Configuration
SEARCH_DRIVER=elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=pageant_empress

# Localization
SUPPORTED_LOCALES=en,es,fr
DEFAULT_LOCALE=en
LOCALE_DETECTION=true

# SEO Configuration
SITEMAP_ENABLED=true
SITEMAP_CACHE_DURATION=3600
ROBOTS_TXT_DISALLOW_ALL=false
META_DEFAULT_DESCRIPTION="PageantEmpress 2025 - Premier Beauty Pageant Competition"
META_DEFAULT_KEYWORDS="beauty pageant, pageant competition, beauty contest, crown, elegance"

# Social Media URLs
SOCIAL_FACEBOOK=https://facebook.com/pageantempress
SOCIAL_INSTAGRAM=https://instagram.com/pageantempress
SOCIAL_TWITTER=https://twitter.com/pageantempress
SOCIAL_YOUTUBE=https://youtube.com/pageantempress
SOCIAL_TIKTOK=https://tiktok.com/@pageantempress
SOCIAL_LINKEDIN=https://linkedin.com/company/pageantempress

# Competition Settings
VOTING_START_DATE=2024-12-01
VOTING_END_DATE=2025-01-31
COMPETITION_DATE=2025-02-14
REGISTRATION_DEADLINE=2024-11-30
MAX_CONTESTANTS=50
MIN_VOTING_AGE=18

# Legal Settings
TERMS_OF_SERVICE_URL=/terms-of-service
PRIVACY_POLICY_URL=/privacy-policy
COOKIE_POLICY_URL=/cookie-policy
CONTACT_EMAIL=legal@pageantempress.com
